
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "createdAt": {
          "type": "number",
          "description": "The timestamp of when the user account was created."
        },
        "userType": {
          "type": "string",
          "description": "The type of user.",
          "enum": ["customer", "admin"]
        },
        "shippingAddress": {
          "type": "string",
          "description": "The user's shipping address."
        },
        "billingAddress": {
          "type": "string",
          "description": "The user's billing address."
        },
        "phoneNumber": {
          "type": "string",
          "description": "The user's phone number."
        }
      },
      "required": ["email", "displayName", "createdAt", "userType"]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product in the store.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "stockQuantity": { "type": "integer" },
        "createdAt": { "type": "number" },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "category": { "type": "string" },
        "merchant": {
          "$ref": "#/entities/User"
        }
      },
      "required": ["name", "description", "price", "stockQuantity", "createdAt"]
    },
    "CartItem": {
      "title": "CartItem",
      "description": "Represents a single item in a user's shopping cart.",
      "type": "object",
      "properties": {
        "quantity": { "type": "integer" },
        "customer": {
          "$ref": "#/entities/User"
        },
        "product": {
          "$ref": "#/entities/Product"
        }
      },
      "required": ["quantity", "customer", "product"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents an order made by a user.",
      "type": "object",
      "properties": {
        "orderDate": { "type": "number" },
        "totalAmount": { "type": "number" },
        "status": { "type": "string" },
        "shippingAddress": { "type": "string" },
        "paymentMethod": { "type": "string" },
        "customer": {
          "$ref": "#/entities/User"
        }
      },
      "required": ["orderDate", "totalAmount", "status"]
    },
    "OrderItem": {
      "title": "OrderItem",
      "description": "Represents an item within an order.",
      "type": "object",
      "properties": {
        "quantity": { "type": "integer" },
        "priceAtPurchase": { "type": "number" },
        "order": {
          "$ref": "#/entities/Order"
        },
        "product": {
          "$ref": "#/entities/Product"
        }
      },
      "required": ["quantity", "priceAtPurchase", "order", "product"]
    }
  },
  "auth": {
    "providers": ["anonymous", "email-and-password", "google"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profile information."
    },
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Stores all product details."
    },
    "/users/{userId}/cart/{productId}": {
      "schema": { "$ref": "#/entities/CartItem" },
      "description": "Stores items in a user's shopping cart."
    },
    "/users/{userId}/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores user orders."
    },
    "/users/{userId}/orders/{orderId}/orderItems/{productId}": {
      "schema": { "$ref": "#/entities/OrderItem" },
      "description": "Stores items within a user's order."
    }
  }
}
