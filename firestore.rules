
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow create: if request.auth != null;
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Admin only

       match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn() 
          && request.resource.data.userId == request.auth.uid
          && (request.resource.data.userImage == null || request.resource.data.userImage is string)
          && (request.resource.data.imageUrl == null || request.resource.data.imageUrl is string);
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
    }

    match /frames/{frameId} {
      allow read: if true;
      allow write: if false; // Admin only
    }

    match /sunglasses/{sunglassId} {
      allow read: if true;
      allow write: if false; // Admin only
    }

    match /lenses/{lensId} {
      allow read: if true;
      allow write: if false; // Admin only
    }

    match /users/{userId}/orders/{orderId} {
      allow read, create, update, delete: if isOwner(userId);

      match /orderItems/{orderItemId} {
        allow read, create, update, delete: if isOwner(userId);
      }
    }
  }
}
