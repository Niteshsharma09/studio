
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all product images
    match /products/{allPaths=**} {
      allow read: if true;
      // Allow any authenticated user to write. 
      // Security is managed by who can access the admin panel in the app itself.
      allow write: if request.auth != null;
    }

    // Allow a user to write to the reviews folder only if the path contains their own UID.
    match /reviews/{productId}/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
