rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to everyone for all files, so that others can see review images.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow a user to write to the reviews folder only if the path contains their own UID.
    // This is the secure way to ensure users can only upload their own content.
    match /reviews/{productId}/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
